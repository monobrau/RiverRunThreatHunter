<Window x:Class="RiverRunThreatHunter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:RiverRunThreatHunter.Views"
        Title="River Run Threat Hunter" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="10">
            <Grid>
                <TextBlock Text="ðŸ” River Run Threat Hunter" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="âš™ï¸ Settings" Margin="5,0" Padding="10,5" Click="SettingsButton_Click"/>
                    <Button Content="ðŸ” START HUNT" Margin="5,0" Padding="10,5" Background="#27ae60" Foreground="White" FontWeight="Bold" Click="StartHuntButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Client Tree -->
            <Border Grid.Column="0" BorderBrush="#bdc3c7" BorderThickness="0,0,1,0">
                <views:ClientTreeView DataContext="{Binding ClientTreeViewModel}"/>
            </Border>
            
            <!-- Main Panel -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- IOC Input -->
                <Border Grid.Row="0" BorderBrush="#bdc3c7" BorderThickness="0,0,0,1">
                    <views:IOCInputPanel DataContext="{Binding IOCInputViewModel}"/>
                </Border>
                
                <!-- Results -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Hunt Options -->
                    <Border Grid.Row="0" Background="#f8f9fa" Padding="10" BorderBrush="#bdc3c7" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Days Back:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Text="14" Width="50" Margin="0,0,20,0"/>
                            <CheckBox Content="â˜‘ S1" IsChecked="True" Margin="5,0" VerticalAlignment="Center"/>
                            <CheckBox Content="â˜‘ Perch" IsChecked="True" Margin="5,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <views:ResultsDataGrid Grid.Row="1" DataContext="{Binding ResultsViewModel}"/>
                </Grid>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#ecf0f1" Padding="5">
            <Grid>
                <TextBlock Text="{Binding ClientTreeViewModel.StatusMessage}" Foreground="#34495e" VerticalAlignment="Center"/>
                <TextBlock Text="ðŸŸ¢ All Connected" HorizontalAlignment="Right" Foreground="#27ae60" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>

